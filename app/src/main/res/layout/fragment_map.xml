<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.MapFragment">

        <com.mapbox.maps.MapView
            android:id="@+id/mapView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
        <net.cachapa.expandablelayout.ExpandableLayout
            android:id="@+id/el_office"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:el_duration="300"
            app:el_expanded="false"
            android:layout_gravity="center"
            app:el_parallax="0.5"
            android:orientation="vertical"
            android:layout_above="@id/tv_office"
            app:layout_constraintBottom_toTopOf="@id/tv_office"
            app:layout_constraintEnd_toEndOf="@id/tv_office"
            app:layout_constraintStart_toStartOf="@id/tv_office"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="5dp"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/rounded_rectangle_16dp"
                android:backgroundTint="@color/white">
                <TextView
                    android:id="@+id/tv_office_visibility"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Show/Hide"
                    android:text="Show/Hide"
                    android:padding="12dp"
                    android:textColor="@color/cogis_blue"
                    android:textSize="11sp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray"
                    android:layout_marginHorizontal="5dp"/>
                <TextView
                    android:id="@+id/tv_office_marker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Add Marker"
                    android:text="@string/manage_markers"
                    android:padding="12dp"
                    android:textColor="@color/cogis_blue"
                    android:textSize="11sp"/>
            </LinearLayout>
        </net.cachapa.expandablelayout.ExpandableLayout>
        <net.cachapa.expandablelayout.ExpandableLayout
            android:id="@+id/el_itinerary_tools"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:el_duration="300"
            app:el_expanded="false"
            android:layout_gravity="center"
            app:el_parallax="0.5"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/rounded_rectangle_16dp"
            android:layout_marginEnd="10dp">
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/iv_add_itinerary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:src="@drawable/ic_add"
                    app:tint="@color/white"
                    />
                <ImageView
                    android:id="@+id/iv_remove_itinerary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:src="@drawable/ic_delete"
                    android:layout_gravity="center"
                    app:tint="@color/cogis_orange"
                    android:layout_marginTop="5dp"
                    />
            </androidx.appcompat.widget.LinearLayoutCompat>
        </net.cachapa.expandablelayout.ExpandableLayout>
        <TextView
            android:id="@+id/tv_office"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bureau"
            android:paddingHorizontal="15dp"
            android:paddingVertical="13dp"
            android:textColor="@color/white"
            android:background="@drawable/rounded_rectangle_16dp"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="10dp"/>

        <net.cachapa.expandablelayout.ExpandableLayout
            android:id="@+id/el_sous_sol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:el_duration="300"
            app:el_expanded="false"
            android:layout_gravity="center"
            app:el_parallax="0.5"
            android:orientation="vertical"
            android:layout_above="@id/tv_office"
            android:padding="5dp"
            app:layout_constraintBottom_toTopOf="@id/tv_sous_sol"
            app:layout_constraintEnd_toEndOf="@id/tv_sous_sol"
            app:layout_constraintStart_toStartOf="@id/tv_sous_sol"
            android:layout_marginBottom="5dp"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/rounded_rectangle_16dp"
                android:backgroundTint="@color/white">
                <TextView
                    android:id="@+id/tv_sous_sol_visibility"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Show/Hide"
                    android:text="Show/Hide"
                    android:paddingHorizontal="15dp"
                    android:paddingVertical="13dp"
                    android:textColor="@color/cogis_blue"
                    android:textSize="12sp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray"
                    android:layout_marginHorizontal="5dp"/>
                <TextView
                    android:id="@+id/tv_rdc_marker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/manage_markers"
                    android:paddingHorizontal="15dp"
                    android:paddingVertical="13dp"
                    android:textColor="@color/cogis_blue"
                    android:textSize="12sp"/>
            </LinearLayout>
        </net.cachapa.expandablelayout.ExpandableLayout>
        <TextView
            android:id="@+id/tv_sous_sol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="15dp"
            android:paddingVertical="13dp"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:text="@string/rdc"
            android:background="@drawable/rounded_rectangle_16dp"
            app:layout_constraintBottom_toBottomOf="@id/tv_office"
            app:layout_constraintEnd_toStartOf="@id/tv_office"
            android:layout_marginEnd="7dp"/>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/ln_tools_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="5dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="15dp"
                android:paddingVertical="13dp"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:text="Finish"
                android:backgroundTint="@color/gray"
                android:background="@drawable/rounded_rectangle_16dp"
                app:layout_constraintBottom_toBottomOf="@id/tv_office"
                app:layout_constraintEnd_toStartOf="@id/tv_office"
                android:layout_marginEnd="7dp"/>

            <TextView
                android:id="@+id/tv_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="15dp"
                android:paddingVertical="13dp"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:text="Add"
                android:background="@drawable/rounded_rectangle_16dp"
                app:layout_constraintBottom_toBottomOf="@id/tv_office"
                app:layout_constraintEnd_toStartOf="@id/tv_office"
                android:layout_marginEnd="7dp"/>

        </androidx.appcompat.widget.LinearLayoutCompat>
        <RelativeLayout
            android:id="@+id/loading"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#77717171"
            android:paddingHorizontal="50dp"
            android:visibility="visible"
            tools:visibility="gone">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/rounded_rectangle_16dp"
                android:backgroundTint="@color/white"
                android:paddingTop="20dp">
                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Preparing Map..."
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentTop="true"
                    android:textColor="@color/black"/>
                <ProgressBar
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/title"
                    android:layout_marginVertical="20dp"
                    android:progressTint="@color/cogis_blue"/>
            </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_itinerary"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/shape_circle"
            android:padding="10dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_navigation"
                app:tint="@color/white"/>
        </RelativeLayout>
        <net.cachapa.expandablelayout.ExpandableLayout
            android:id="@+id/el_poi_list"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:layout_constraintHeight_default="percent"
            app:layout_constraintHeight_percent=".6"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_poi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:listitem="@layout/it_item"
                android:background="@drawable/rounded_rectangle_16dp"
                android:backgroundTint="#66B6B6B6"
                android:clipChildren="true"
                android:clipToPadding="true"
                />
        </net.cachapa.expandablelayout.ExpandableLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>